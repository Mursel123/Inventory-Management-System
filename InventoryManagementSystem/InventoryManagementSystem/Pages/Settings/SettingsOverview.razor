@page "/settings"
@using Blazored.FluentValidation

@if (Settings != null)
{
    <EditForm Model="@Settings" OnValidSubmit="OnValidSubmit">
        <FluentValidationValidator />
        <MudGrid>
            <MudItem xs="12" sm="7">
                <MudCard>
                    <MudCardContent>
                        <MudText Class="mt-5 mb-md-5" Typo="Typo.h6">Settings</MudText>

                        <MudTextField Label="Product Amount Alert"
                                      Class="mb-5"
                        @bind-Value="Settings.AtLeastProductAmount"
                                      HelperText="Set an alert for product when the quantity reaches or falls below this amount."
                                      Variant="Variant.Outlined"
                                      For="@(() => Settings.AtLeastProductAmount)" />


                        <MudTextField Label="Ingredient Ml Total Alert"
                                      Class="mb-5"
                        @bind-Value="Settings.AtLeastIngredientMLTotal"
                                      HelperText="Set an alert for ingredient when the ml total reaches or falls below this ml total."
                                      Variant="Variant.Outlined"
                                      For="@(() => Settings.AtLeastIngredientMLTotal)" />


                    </MudCardContent>
                    <MudCardActions>
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Save</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        </MudGrid>
    </EditForm>
}


