@page "/order-overview"
@using InventoryManagementSystem.Application.DTOs.Order;

<MudContainer Class="my-5">
    <InventoryManagementSystem.Components.CreateButton Value="order" />
    <MudDataGrid RowsPerPage="7" RowClass="cursor-pointer" Items="@Orders" Hover="true" Filterable="true" RowClick="RowClick()" FilterMode="DataGridFilterMode.Simple">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Orders</MudText>
            <MudSpacer />
        </ToolBarContent>
        <Columns>
            <PropertyColumn Property="x => x.OrderNumber" Title="Order Number" />
            <PropertyColumn Property="x => x.Date.ToShortDateString()" Title="Date" />
            <PropertyColumn Property="x => x.TotalCost" Title="Total Cost" Format="C" />
            <PropertyColumn Property="x => x.Type" Title="Order Type" />
        </Columns>
        <PagerContent>
            <MudDataGridPager T="OrderListDTO" />
        </PagerContent>
    </MudDataGrid>
</MudContainer>


