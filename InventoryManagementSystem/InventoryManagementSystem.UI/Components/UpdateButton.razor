<MudButton StartIcon="@Icons.Material.Filled.Edit" Color="Color.Primary" Variant="Variant.Filled" Class="mb-2" OnClick="NavigateToPage">
    Edit
</MudButton>

@code {
    [Inject]
    public NavigationManager NavigationManager { get; set; }
    [Parameter]
    public string Value { get; set; }
    [Parameter]
    public string Id { get; set; }
    private void NavigateToPage()
    {
        if (Value == "ingredient")
        {
            NavigationManager.NavigateTo($"/ingredients/update/{Id}");
        }
        else if (Value == "product")
        {
            NavigationManager.NavigateTo($"/products/update/{Id}");
        }

    }
}
