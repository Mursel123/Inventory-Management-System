@page "/orders"
@using InventoryManagementSystem.UI.Services;


@if (IsLoading)
{
    <InventoryManagementSystem.UI.Components.Loading IsLoading="IsLoading" />
}
else
{
    <MudContainer>
        <InventoryManagementSystem.UI.Components.CreateButton Value="order" />
        <MudDataGrid RowClass="cursor-pointer" Items="@Orders" Hover="true" Filterable="true" RowClick="RowClick()" FilterMode="DataGridFilterMode.Simple">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Orders</MudText>
                <MudSpacer />
            </ToolBarContent>
            <Columns>
                <PropertyColumn Property="x => x.OrderNumber" Title="Number" />
                <PropertyColumn Property="x => x.TotalCost" Title="Total Cost" Format="C" />
                <PropertyColumn Property="x => x.Date" Title="Date" Format="dd/MM/yyyy" />
                <PropertyColumn Property="x => x.Type" Title="Type" />
            </Columns>
            <PagerContent>
                <MudDataGridPager T="OrderListDto" />
            </PagerContent>
        </MudDataGrid>
    </MudContainer>
}


