@page "/ingredients"
@using InventoryManagementSystem.UI.Services;

@if (IsLoading)
{
    <InventoryManagementSystem.UI.Components.Loading IsLoading="IsLoading" />
}
else
{
    <MudContainer>
        <InventoryManagementSystem.UI.Components.CreateButton Value="ingredient" />
        <MudDataGrid RowClass="cursor-pointer" Items="@Ingredients" Hover="true" Filterable="true" RowClick="RowClick()" FilterMode="DataGridFilterMode.Simple">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Ingredients</MudText>
                <MudSpacer />
            </ToolBarContent>
            <Columns>
                <PropertyColumn Property="x => x.Name" Title="Name" />
                <PropertyColumn Property="x => x.MlUsage" Title="Usage (ml)" />
                <PropertyColumn Property="x => x.MlTotal" Title="Total (ml)" />

            </Columns>
            <PagerContent>
                <MudDataGridPager T="IngredientListDto" />
            </PagerContent>
        </MudDataGrid>
    </MudContainer>
}

